{
  "id": "ipfs_v1",
  "name": "CryftIPFS - Self-Contained IPFS Module",
  "version": "3.0.0",
  "description": "Fully self-contained IPFS-like content-addressable storage. No external daemon required - all storage happens within the WASM module. Includes validator rewards for incentivized pins.",
  "author": "Cryft Labs",
  "selfContained": true,
  "capabilities": [
    "start_node",
    "stop_node",
    "status",
    "add",
    "cat",
    "get",
    "stat",
    "ls",
    "pin",
    "unpin",
    "pin_ls",
    "repo_stat",
    "repo_gc",
    "validator_stats",
    "list_incentivized",
    "incentivize",
    "challenge",
    "submit_proof",
    "claim_rewards"
  ],
  "defaultFor": {
    "ipfs_add": true,
    "ipfs_cat": true,
    "ipfs_get": true,
    "pin_add": true,
    "pin_rm": true,
    "pin_ls": true,
    "validator_status": true,
    "claim_rewards": true
  },
  "hasGui": true,
  "guiPath": "gui",
  "config": {
    "validator_id": {
      "type": "string",
      "default": null,
      "description": "Validator node ID for reward tracking"
    },
    "max_storage_gb": {
      "type": "number",
      "default": 100,
      "description": "Maximum storage allocation in GB"
    },
    "auto_pin_incentivized": {
      "type": "boolean",
      "default": true,
      "description": "Automatically pin incentivized content"
    },
    "public_gateway": {
      "type": "string",
      "default": "https://ipfs.cryft.network",
      "description": "Public gateway for shareable URLs"
    }
  },
  "rewards": {
    "description": "Validators earn CRYFT tokens for pinning incentivized content",
    "tiers": {
      "basic": {
        "multiplier": 1,
        "description": "Standard storage with basic rewards"
      },
      "standard": {
        "multiplier": 2,
        "description": "Enhanced rewards for standard content"
      },
      "priority": {
        "multiplier": 5,
        "description": "High rewards for priority content"
      },
      "critical": {
        "multiplier": 10,
        "description": "Maximum rewards for critical infrastructure content"
      }
    }
  },
  "dependencies": {
    "runtime": ">=0.4.0"
  }
}
