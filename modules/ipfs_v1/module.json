{
  "id": "ipfs_v1",
  "name": "IPFS Module",
  "version": "2.0.0",
  "description": "Self-contained IPFS module with embedded Iroh node (default) or optional kubo support",
  "author": "Cryft Labs",
  "capabilities": [
    "node_start",
    "node_stop",
    "node_status",
    "node_config",
    "ipfs_add",
    "ipfs_cat",
    "ipfs_get",
    "ipfs_pin",
    "ipfs_unpin",
    "ipfs_pin_ls",
    "ipfs_stat",
    "ipns_publish",
    "ipns_resolve",
    "ipns_key_gen",
    "ipns_key_list",
    "swarm_connect",
    "swarm_peers",
    "swarm_addrs",
    "repo_stat",
    "repo_gc"
  ],
  "defaultFor": {
    "node_start": true,
    "node_stop": true,
    "node_status": true,
    "node_config": true,
    "ipfs_add": true,
    "ipfs_cat": true,
    "ipfs_get": true,
    "ipfs_pin": true,
    "ipfs_unpin": true,
    "ipfs_pin_ls": true,
    "ipfs_stat": true,
    "ipns_publish": true,
    "ipns_resolve": true,
    "ipns_key_gen": true,
    "ipns_key_list": true,
    "swarm_connect": true,
    "swarm_peers": true,
    "swarm_addrs": true,
    "repo_stat": true,
    "repo_gc": true
  },
  "hasGui": true,
  "guiPath": "gui",
  "nativeBinary": {
    "path": "native/ipfs-node",
    "description": "Embedded Iroh IPFS node - provides kubo-compatible API",
    "buildCommand": "cargo build --release --manifest-path native/Cargo.toml",
    "platforms": {
      "linux-x64": "native/target/release/ipfs-node",
      "linux-arm64": "native/target/aarch64-unknown-linux-gnu/release/ipfs-node",
      "darwin-x64": "native/target/release/ipfs-node",
      "darwin-arm64": "native/target/aarch64-apple-darwin/release/ipfs-node",
      "windows-x64": "native/target/release/ipfs-node.exe"
    }
  },
  "config": {
    "backend": {
      "type": "string",
      "default": "auto",
      "description": "Backend type: 'iroh' (embedded, default), 'kubo' (external daemon), or 'auto' (detect)",
      "options": ["iroh", "kubo", "auto"]
    },
    "api_url": {
      "type": "string",
      "default": "http://127.0.0.1:5001",
      "description": "IPFS API URL"
    },
    "gateway_url": {
      "type": "string",
      "default": "http://127.0.0.1:8080",
      "description": "IPFS Gateway URL"
    },
    "public_gateway": {
      "type": "string",
      "default": "https://gateway.cryft.network",
      "description": "Public gateway for shareable URLs"
    },
    "data_dir": {
      "type": "string",
      "default": "~/.cryfttee/ipfs",
      "description": "Data directory for Iroh storage"
    },
    "timeout_secs": {
      "type": "number",
      "default": 60,
      "description": "Request timeout in seconds"
    }
  },
  "dependencies": {
    "runtime": ">=0.4.0"
  },
  "requirements": {
    "note": "No external dependencies when using Iroh (default). Optionally use existing kubo daemon."
  }
}
