{
  "id": "bls_tls_signer_v1",
  "version": "2.0.0",
  "description": "Self-contained BLS/TLS signing module with in-memory key management. All cryptographic operations happen within WASM.",
  "capabilities": [
    "bls_generate",
    "bls_sign",
    "bls_verify",
    "list_keys",
    "lock_key",
    "unlock_key",
    "delete_key",
    "sign_module",
    "export_state"
  ],
  "selfContained": true,
  "hostCallsRequired": [
    "get_random_seed",
    "persist_state",
    "load_state"
  ],
  "keyManagement": {
    "storage": "in-module",
    "supportedKeyTypes": {
      "bls": "BLS12-381 (simplified for WASM)",
      "module_signing": "BLS-based module signatures"
    }
  },
  "hasGui": true,
  "guiPath": "gui",
  "abi": {
    "type": "signing",
    "schemaVersion": "2.0.0",
    "entrypoint": "invoke",
    "memoryExports": ["alloc", "dealloc", "get_output_ptr"]
  },
  "build": {
    "toolchain": "rust-1.80.0+wasm32-unknown-unknown",
    "wasmOptimization": "s",
    "dependencies": "none"
  }
}
